{
  "title": "SonnenBackup Batterie",
  "config": {
    "flow_title": "SonnenBackup Batterie Configuration",
    "abort": {
      "cannot_connect": "[%key:common::config_flow::error::cannot_connect%]",
      "already_configured_device": "[%key:common::config_flow::abort::already_configured_device%]",
      "reauth_successful": "[%key:common::config_flow::abort::reauth_successful%]",
      "reconfigure_successful": "[%key:common::config_flow::abort::reconfigure_successful%]"
    },
    "error": {
      "invalid_interval": "Invalid Update Interval. {error_details}",
      "cannot_connect": "[%key:common::config:::error::cannot_connect%]",
      "invalid_api_key": "[%key:common::config:::error::invalid_api_key%]",
      "device_api_error": "Device API Error",
      "timeout_connect":  "[%key:common::config_flow::error::timeout_connect%]",
      "unknown": "[%key:common::config:::error::unknown%]"
    },
    "create_entry": {
      "authenticated": "[%key:common::config_flow::create_entry::authenticated%]"
    },
    "step": {
      "user": {
        "title": "BackupBatterie Network Configuration",
        "description": "Batterie IP Address & API Token",
        "data": {
          "ip_address": "[%key:common::config_flow::data::ip%]",
          "port": "[%key:common::config_flow::data::port%]",
          "api_token": "[%key:common::config_flow::data::api_token%]",
          "model": "Model",
          "device_id": "Serial Number"
        },
        "data_description": {
          "ip_address": "IP address of the Sonnen Batterie.",
          "port": "Port used by Batterie portal. Default is usually correct.",
          "api_token": "API Token generated by Sonnen Batterie portal. Read Token preferred.",
          "model": "Model of this Sonnen Batterie",
          "device_id": "Serial number is found on admin portal dashboard"
        }
      },
      "reconfigure": {
        "description": "Update configuration for {device_id}.",
        "data": {
          "ip_address":  "[%key:common::config_flow::data::ip%]",
          "port": "[%key:common::config_flow::data::port%]",
          "api_token": "[%key:common::config_flow::data::api_token%]",
          "model": "[%key:component::sonnenbackup::config::step::user::data::model%]"
        },
        "data_description": {
          "ip_address": "[%key:component::sonnenbackup::config::step::user::data_description::ip_address%]",
          "port": "[%key:component::sonnenbackup::config::step::user::data_description::port%]",
          "api_token": "[%key:component::sonnenbackup::config::step::user::data_description::api_token%]",
          "model": "[%key:component::sonnenbackup::config::step::user::data_description::model%]"
        }
      }
    },
    "options": {
      "step": {
        "init": {
          "title": "BackupBatterie Behaviour Options",
          "description": "Change scan interval or toggle debug mode.",
          "data": {
            "scan_interval": "Update interval",
            "sonnenbackup_debug": "Debug"
          }
        }
      }
    }
  },
  "entity": {
    "binary_sensor": {
      "offgrid": { "name": "Off Grid" },
      "critical_error": { "name": "Critical Error" }
    },
    "sensor": {
      "sonnenbackup_state": {
        "name": "Batterie State",
        "state": {
          "standby": "Reserve Standby",
          "charging": "Charging",
          "discharging": "Discharging",
          "discharging_reserve": "Discharging Reserve",
          "charged": "Fully Charged",
          "discharged" : "Fully Discharged"
        }
      },
      "operating_mode": {
        "name": "Operating Mode",
        "state": {
          "1": "Manual",
          "2": "Automatic",
          "6": "Extension module",
          "10": "Time of Use"
        }
      },
      "system_status": {
        "name": "System Status",
        "state": {
          "ongrid": "On Grid",
          "offgrid": "Off Grid",
          "config": "Config",
          "critical_error": "Critical Error"
        }
      },
      "status_timestamp": {
        "name": "Status Timestamp"
      },
      "fully_charged_at": {
        "name": "Fully Charged at"
      },
      "fully_discharged_at": {
        "name": "Fully Discharged at"
      },
      "status_backup_buffer": {
        "name": "Backup Buffer%"
      },
      "battery_cycle_count": {
        "name": "Charge cycles"
      },
      "full_charge_capacity": {
        "name": "Full Charge Capacity kWh"
      },
      "remaining_capacity": {
        "name": "Remaining Capacity kWh"
      },
      "capacity_until_reserve": {
        "name": "Capacity until Reserve kWh"
      },
      "backup_reserve_at": {
        "name": "Reserve Standby at"
      },
      "backup_reserve_capacity": {
        "name": "Backup Reserve Capacity kWh"
      },
      "consumption_average": {
        "name": "Average consumption"
      },
      "frequency": {
        "name": "Frequency Hz"
      },
      "relative_state_of_charge": {
        "name": "Relative State of Charge%"
      },
      "usable_state_of_charge": {
        "name": "Usable State of Charge%"
      }
    }
  }
}
