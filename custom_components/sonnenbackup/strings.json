{
  "config": {
    "step": {
      "user": {
        "title": "SonnenBackup Batterie",
        "description": "Enter Batterie connection details.",
        "data": {
          "ip_address": "[%key:common::config_flow::data::ip%]",
          "port": "[%key:common::config_flow::data::port%]",
          "api_token": "[%key:common::config_flow::data::api_token%]",
          "sections": {
             "detail": {
               "name": "Device Details",
               "data": {
                 "model":"Model",
                 "device_id": "Serial Number"
                }
              }

          }
        }
      }
    },
    "options": {
      "step": {
        "init": {
          "title": "SonnenBackup Component Behaviours",
          "description": "Change scan interval or toggle debug mode.",
          "data": {
            "scan_interval": "Poll Interval",
            "sonnenbackup_debug": "Debug"
          }
        }
      },
      "error": {
        "invalid_interval": "Invalid Interval. {error_detail}"
      }
    },
    "abort": {
      "already_configured": "[%key:common::config_flow::abort::already_configured%]"
    },
    "error": {
      "invalid_ip": "[%key:common::config_flow::error::invalid_host%]",
      "cannot_connect": "[%key:common::config_flow::error::cannot_connect%]",
      "invalid_auth": "[%key:common::config_flow::error::invalid_auth%]",
      "device_api_error": "Device HTTP error. {error_detail}",
      "invalid_port": "Invalid port number. Must be between 1 and 49151.",
      "unknown": "[%key:common::config_flow::error::unknown%]"
    }
  }
